import Social from "./Social.astro";

const platform = "github";
const username = "withastro";
---

<style>
  footer {
    display: grid;
    grid-template-rows: auto auto;
    margin-top: 2rem;
    background-color: white;
    padding-top: 1rem;
    gap: 1rem;
  }
  #footer-columns {
    display: grid;
    justify-items: center;
    gap: 1rem;
  }
  #footer-columns img {
    width: 200px;    
  }
  #footer-columns-img{
    display: flex;
    align-items: center;
  }
  #footer-columns ul, li, a{
    color: gray;
  }
  #footer-columns h2{
    font-size: medium;
  }

  #copy {
    background-color: #EA1B36;
    display: flex;
    justify-content: center;
    color: white;
    font-size: small;
  }

  @media screen and (min-width: 768px) {
    footer {
    }
    #footer-columns {
      grid-template-columns: 2fr 1fr 1fr;
    }   
    #footer-columns ul, li, a{
      font-size: small;
    }
  }
</style>

