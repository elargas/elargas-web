---
import ImagenBanner from "../components/ImagenBanner.astro";
import LogosSection from "../components/LogosSection.astro";

import SliderTres from "../components/reactComponents/SliderTres";
import TextoGasEtapaDos from "../components/textComponents/TextoGasEtapaDos.astro";
import TextoGasEtapaUno from "../components/textComponents/TextoGasEtapaUno.astro";
import TextoSection from "../components/TextoSection.astro";
import Baseeelayout from "../layouts/Baseeelayout.astro";
---

<Baseeelayout pageTitle="Gasoducto">
  <ImagenBanner img="/gasoducto1.jpg" desc="sobre nosotros" />

  <TextoSection
    titulo="Gasoducto Productivo - Etapa 1"
    fondo='url("/fondito-para-banner.jpg")'
  >
    <TextoGasEtapaUno />
  </TextoSection>

  <SliderTres client:load />

  <TextoSection
    titulo="Gasoducto Productivo - Etapa 2"
    fondo='url("/fondito-para-banner.jpg")'
  >
    <TextoGasEtapaDos />
  </TextoSection>
  <SliderTres client:load />
  <LogosSection />
</Baseeelayout>
